# Soal nomor 1

berat = float(input("masukkan berat anda dalam kg = "))
tinggi = float(input("masukkan tinggi anda dalam meter = "))
BMI = berat / (tinggi**2) 
print ("berat badan yang kamu perlukan adalah = ", round(BMI))

# Soal nomor 2

x = float(input("masukkan bilangan bulat = "))
rumus = 2*x**3 + 2*x + 15/x 
print ("hasil dari f(x) adalah = ", round(rumus))

# Soal nomor 3

gaji_per_jam = float(input("masukkan gaji yang anda inginkan = "))
jumlah_jam_kerja = int(input("masukkan jumlah jam kerja yang anda inginkan = "))
# rumus-rumus
pendapatan_sebelum_pajak = gaji_per_jam * jumlah_jam_kerja * 5
pajak_kerja = pendapatan_sebelum_pajak * 0.14
pendapatan_setelah_pajak = pendapatan_sebelum_pajak - pajak_kerja
pendapatan_setelah_membeli_pakaian_aksesoris = pendapatan_setelah_pajak * 0.1
pendapatan_setelah_membeli_alat_tulis = pendapatan_setelah_pajak * 0.01
sisa_total = pendapatan_setelah_pajak - pendapatan_setelah_membeli_pakaian_aksesoris - pendapatan_setelah_membeli_alat_tulis
pendapatan_setelah_bersedekah =  sisa_total * 0.25
uang_diterima_anak_yatim = pendapatan_setelah_bersedekah * 0.3
uang_diterima_kaum_dhuafa = pendapatan_setelah_bersedekah - uang_diterima_anak_yatim
# hasil
print ("pendapatan sebelum pajak adalah = ", round(pendapatan_sebelum_pajak))
print ("pendapatan setelah pajak adalah = ", round(pendapatan_setelah_pajak))
print ("pendapatan setelah membeli pakaian dan aksesoris = ", round(pendapatan_setelah_membeli_pakaian_aksesoris))
print ("pendapatan setelah membeli alat tulis = ", round (pendapatan_setelah_membeli_alat_tulis))
print ("pendapatan setelah bersedekah = ", round (pendapatan_setelah_bersedekah))
print ("uang yang diterima anak yatim  = ", round(uang_diterima_anak_yatim))
print ("uang yang diterima kaum dhuafa  = ", round(uang_diterima_kaum_dhuafa))
